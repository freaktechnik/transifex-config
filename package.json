{
  "name": "transifex-config",
  "version": "5.0.0",
  "description": "Reads the transifex client config and offers utility methods on top of it.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js lib/ test/",
    "test": "npm run lint && c8 ava",
    "coverage": "c8 report -r lcov",
    "docs": "jsdoc2md index.js lib/*.js > docs/api.md"
  },
  "keywords": [
    "transifex",
    "tx"
  ],
  "author": "Martin Giger (https://humanoids.be)",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "ini": "^5.0.0",
    "lodash.memoize": "^4.1.2"
  },
  "devDependencies": {
    "@freaktechnik/eslint-config-node": "^10.0.10",
    "@freaktechnik/eslint-config-test": "^10.0.10",
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "eslint": "^9.11.1",
    "jsdoc-to-markdown": "^9.0.1",
    "random-string": "^0.2.0"
  },
  "bugs": {
    "url": "https://github.com/freaktechnik/transifex-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/freaktechnik/transifex-config.git"
  },
  "engines": {
    "node": ">= 16.9.0"
  },
  "files": [
    "index.js",
    "lib",
    "docs"
  ],
  "ava": {
    "files": [
      "test/*.js",
      "!test/_*.js"
    ]
  },
  "type": "module"
}
